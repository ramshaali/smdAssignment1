<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".enteritem">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sc1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel1"
        android:padding="16dp">
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_alignParentStart="true"



            android:layout_marginTop="20dp"
            android:src="@drawable/cross" />

        <TextView
            android:id="@+id/emailt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"

            android:textColor="@color/black"
            android:text="Item"
            android:textSize="25sp" />




    </RelativeLayout>
    <View
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_below="@id/rel1"></View>


  <LinearLayout
      android:id="@+id/lay1"
      android:layout_below="@id/lin1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
      android:layout_marginTop="30dp"
    android:padding="16dp">


      <LinearLayout
          android:layout_width="32dp"
          android:layout_height="141dp"
          android:layout_weight="1"
          android:background="@drawable/dashedbox"
          android:gravity="center"
          android:orientation="vertical">

          <ImageView
              android:id="@+id/cam"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:src="@drawable/camo" />

          <TextView
              android:id="@+id/gallery"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:textColor="#FFA500"
              android:text="Upload Image" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/dashedbox">

        <ImageView
            android:id="@+id/cam2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vido"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFA500"
            android:text="Upload Video"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel2"
        android:padding="16dp"
        android:layout_below="@+id/lay1">
    <TextView
        android:id="@+id/textname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:text="Name"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/robreg"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"

        android:id="@+id/boxname"
        android:background="@drawable/square2"

        android:layout_below="@+id/textname"

        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lee John"
            android:id="@+id/name"
            android:background="#00000000"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:minHeight="48dp"></EditText>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/textemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boxname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/robreg"
        android:text="Hourly Rate"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"

        android:id="@+id/boxemail"
        android:background="@drawable/square2"

        android:layout_below="@+id/textemail"
       >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:paddingStart="16dp"
            android:hint="Enter Hourly Rate"
            android:paddingEnd="16dp"
            android:id="@+id/rate"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:minHeight="48dp"/>

    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        android:id="@+id/textpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/boxemail"
        android:text="Description"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/robreg"/>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"

        android:id="@+id/boxpass"
        android:layout_below="@+id/textpass"
        android:background="@drawable/square2"
>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:paddingStart="16dp"
            android:hint="Enter Description"
            android:paddingEnd="16dp"
            android:id="@+id/desc"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:minHeight="48dp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/textcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/boxpass"
        android:text="City"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/robreg"/>

    <Spinner
        android:layout_below="@+id/textcon"
        android:id="@+id/drop1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/square2"
        android:entries="@array/cites"
        android:minHeight="48dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

    </Spinner>

    </RelativeLayout>


    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"

        android:layout_marginEnd="9dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/square2"
        android:backgroundTint="#F89820"
        android:elevation="25dp"
        android:fontFamily="@font/robreg"
        android:text="Post Item"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"></Button>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>