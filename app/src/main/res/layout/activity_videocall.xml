<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".video">




        <ImageView
            android:id="@+id/camv"
            android:layout_width="match_parent"
            android:layout_height="590dp"
            android:background="@drawable/sharp_rectangle"
            android:backgroundTint="#d3d3d3"/>

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/butex"
                android:layout_marginRight="55dp"
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/cross2"
                android:minHeight="55dp"
                android:hint="-"
                android:textColorHint="#00000000"
                android:layout_weight="1"/>

            <Button
                android:hint="-"
                android:textColorHint="#00000000"
                android:id="@+id/butbr"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="43dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/brightness"
                android:layout_weight="1"/>

            <Button
                android:hint="-"
                android:textColorHint="#00000000"
                android:id="@+id/buttime"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="52dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/clock"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:orientation="horizontal"
            android:backgroundTint="@color/white"
            android:padding="16dp"
            android:weightSum="3">

            <Button
                android:hint="-"
                android:textColorHint="#00000000"
                android:id="@+id/btngal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/gallery"/>

            <Button
                android:id="@+id/btnclick"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginRight="13dp"
                android:layout_marginLeft="13dp"
                android:layout_weight="1"
                android:hint="-"
                android:textColorHint="#00000000"
                android:background="@drawable/snapshot" />

            <Button
                android:hint="-"
                android:textColorHint="#00000000"
                android:id="@+id/btncam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/reverse_cam"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:text="Photo"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:background="@drawable/rect"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/vid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rect"
                android:backgroundTint="#FFA500"
                android:textColor="@color/white"
                android:text="Video"
                android:textSize="17dp"
                android:textAllCaps="false"

                android:minHeight="50dp"
                android:layout_weight="1"/>

        </LinearLayout>




</RelativeLayout>